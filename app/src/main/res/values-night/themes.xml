<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaptureMoment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_blue_500</item>
        <item name="colorOnPrimary">@color/dark_blue_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_500</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status & Navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_dark</item>
        <item name="android:navigationBarColor">@color/dark_blue_200</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_blue_200</item>
        <item name="android:editTextColor">@color/dark_blue_500</item>
    </style>



    <style name="expandedBarTextStyle" parent="Theme.CaptureMoment">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

        <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <item name="android:windowBackground">@drawable/splash_light</item>
            <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        </style>


    <style name="ButtonGeneral">
        <item name="android:backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.AppName">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Title.Regular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.SubTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.SubTitle.Regular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.Content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Content.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>
</resources>